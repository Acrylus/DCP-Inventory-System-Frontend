{
  "env": {
    "es6": true,
    "browser": false,  // Disable browser environment to prevent issues with Node.js-specific code
    "node": true       // Enable Node.js environment
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "@typescript-eslint/no-require-imports": "off"
  }
}
